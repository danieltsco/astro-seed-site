</style>
<script>
	// Animate OUR IMPACT data
	function countTo(max, increment, delay, elementId) {
		let counter = 0; // start from 0
		let display = document.getElementById(elementId); // element to animate

		function updateCounter() { // update function
			if ( counter <= max ) { 
				display.textContent = counter; // show counter
				counter += increment; // increment counter
				setTimeout(updateCounter, delay); // add a delay
			}
		}
		updateCounter(); // call the updated function
	}
	countTo(900, 5, 5, 'counterDisplay');
	countTo(866, 1, 1, 'counterDisplay2');
	countTo(130, 1, 1, 'counterDisplay3');
</script>
