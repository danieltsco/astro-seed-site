---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from "../components/Footer.astro";
---
<Layout title="Impact">
    <Navbar />
    <div class="bg-[url(https://seedcompany.com/wp-content/uploads/2021/09/standards-bg.jpg)] bg-no-repeat bg-cover">
        <div class="relative isolate px-6 pt-14 lg:px-8">
        <div class="mx-auto max-w-5xl px-[20px] md:py-20 lg:py-56">
            <div class="pb-20 max-w-3xl">
                <h1 class="text-2xl md:text-4xl tracking-tight text-gray-900 animate__animated animate__fadeInLeft">We Bring Investors and Local Leaders Together to Translate Scripture</h1>
            </div>
            <div class="md:flex gap-20 animate__animated animate__fadeInUp">
                <img src="https://seedcompany.com/wp-content/uploads/2024/06/hero-impact-compressed-1-1.webp" class="w-full md:w-1/2 rounded-md">
                <p class="text-xl pt-10 md:pt-0">Seed Company exists to connect people from every nation into a global movement to transform lives through Bible translation. Through these partnerships, we're now poised to bring God's Word to every people group in our lifetime.</p>
            </div>
        </div>
        </div>
    </div>
    <Footer />
</Layout>